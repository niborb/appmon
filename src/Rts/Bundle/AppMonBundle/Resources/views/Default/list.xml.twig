<?xml version="1.0" ?>
<appmon>
    <apps>
        {% for application in apps %}
        <app>
            <name>{{application.name}}</name>
            <version>{{application.version}}</version>
            <homepage>{{application.homeUrl}}</homepage>
            <category>{{application.category}}</category>
            <server>
                <ip>{{application.server.ipAddress}}</ip>
                <name>{{application.server.description}}</name>
                <host>{{application.server.hostname}}</host>
            </server>
            {% if application.metaData|length > 0 %}
             <meta>
                {% for key, meta in application.metaData %}
                <item>{{key}}: {{meta}} </item>
                {% endfor %}
            </meta>
            {% else %}
            <meta />    
            {% endif %}
        </app>
        {% endfor %}
    </apps>
</appmon>