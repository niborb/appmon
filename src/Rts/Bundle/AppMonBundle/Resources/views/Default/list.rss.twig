<?xml version="1.0" ?>
<rss version="2.0">
    <channel>
        <title>{% trans %}App list {% endtrans %}</title>
        <link></link>
        <description></description>
        {% for application in apps %}
        <item>
            <title>{{application.name}} {{application.version}}</title>
            <link>{{application.homeUrl}}</link>
            <description><![CDATA[
                Version: {{application.version}} <br/>
                Server: {{application.server}} <br/>
                Category: {{application.category}}<br/>
                {% if application.metaData|length > 0 %}
                Meta:<ul>
                    {% for key, meta in application.metaData %}
                    <li>{{key}}: {{meta}} </li>

                    {% endfor %}
                </ul>
                {% endif %}


            ]]></description>
        </item>
        {% endfor %}
    </channel>
</rss>